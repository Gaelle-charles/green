{% extends "indexLayout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block title %}
    {{ category.name | name }}
{% endblock %}

{% block content %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ category.name | name }}</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class=" con-w3l agileinf">

                    {% for article in articles %}
                        <div class="col-md-3 pro-1">
                            <div class="col-m">
                                <div class="mid-2">
                                    <label for="">{{ article.title }}</label>
                                </div>
                                <a href="#" data-toggle="modal" data-target="#myModal1" class="offer-img">
                                    <img src="{{ asset ( 'images/' ~ article.image ) }}" width="200em"
                                         class="img-responsive" alt="{{ article.title }}">
                                </a>
                                <div class="mid-1">
                                    <div class="women">
                                        <h6><a href="{{ path('default_article', {
                                                'alias' : article.alias,
                                                'category' : article.category.alias,
                                                'id' : article.id
                                            }) }}">Détails</a></h6>
                                    </div>
                                    <div class="pr-single">
                                        <p class="reduced ">{{article.price}} €</p>
                                    </div>
                                    <div class="add">
                                        <button class="btn btn-info my-cart-btn my-cart-b" data-id="36"
                                                data-name="Baby Oil"
                                                data-summary="summary 36" data-price="6.00" data-quantity="1"
                                                data-image="images/of36.png">Add to Cart
                                        </button>
                                    </div>

                                </div>
                            </div>
                        </div>
                    {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}



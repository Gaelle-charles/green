{% extends "indexLayout.html.twig"  %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{#{% block title %}#}
{#    {{ article.title | title}}#}
{#{% endblock %}#}

{% block content %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ category.name }}</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class=" con-w3l agileinf">
                {% if articles is not empty %}
                {% for article in articles %}
                <div class="col-md-3 pro-1">
                    <div class="col-m">
                        <div class="mid-2 text-center">
                            <a href="{{ path('default_article', {
                                'alias' : article.alias,
                                'category' : article.category.alias,
                                'id' : article.id
                            }) }}">
                        <label for="">{{article.title}}</label></a>
                        </div>
                        <a href="{{ path('default_article', {
                            'alias' : article.alias,
                            'category' : article.category.alias,
                            'id' : article.id
                        }) }}">
                            <img src="{{ asset ( 'images/' ~ article.image )}}" width="200em" class="img-responsive" alt="{{article.title}}">
                        </a>
                        <div class="mid-1">
                            <div class="women">
                                <h6><a href="{{ path('default_article', {
                                        'alias' : article.alias,
                                        'category' : article.category.alias,
                                        'id' : article.id
                                    }) }}">{{article.content|striptags}}</a></h6>
                            </div>
                            <div class="mid-2">
                                <div class="pr-single">

                                    <p><mark><strong>{{article.price}} â‚¬</strong></mark></p>
                                </div>
                                <div class="block">
                                    <div class="starbox small ghosting"> </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="add">
                                <button class="btn btn-info my-cart-btn my-cart-b" data-id="36" data-name="Baby Oil" data-summary="summary 36" data-price="6.00" data-quantity="1" data-image="images/of36.png">
                                    <a href="{{ path('panier_add', {'id':article.id}) }}">Ajouter au panier</a></button>
                            </div>

                        </div>
                    </div>
                </div>
                {% endfor %}
                {% else %}
                    <div class="col alert alert-warning text-center">
                        Aucune publication pour le moment
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}



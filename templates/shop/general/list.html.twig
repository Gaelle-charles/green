{% extends "indexLayout.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}

                {% if articles is not empty %}
                    {% for article in articles %}
                        <div class="col-md-4 mt-4">
                            <div class="card shadow-sm">
                                <h5 class="card-title">{{ article.title }}</h5>
                                <img class="card-img-top" height="250" width="250"
                                     src="{{ asset ( 'images/' ~ article.image ) }}" alt="{{ article.title }}">
                                <div class="card-body">
                                    <div class="card-text">
                                        <p>{{ article.content |striptags }}</p>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        {#                                        <a href="{{ path('default_article', }  #}
                                        {#                                            'categorie' : article.category.alias, 'alias': article.alias, 'id' : article.id#}
                                        {#                                        })}}"#}
                                        {#                                           class="btn btn-primary">Lire la suite</a>#}
                                        {#                                        <small class="text-muted">#}
                                        {#                                            {{ article.user.firstname }} {{ article.user.lastname }}#}
                                        {#                                        </small>#}
                                    </div>
                                    <a href="{{ path('panier_add', {'id':article.id}) }}"
                                       class="btn btn-success float-right">
                                        <i class="fas fa-shopping-cart mr-1"></i>
                                        Ajouter
                                    </a>
                                    <aside>
                                        {{ article.price }}
                                    </aside>
                                </div>
                            </div> <!-- Fin card -->
                        </div>
                        <a href="{{ path('default_article', {
                            'alias' : article.alias,
                            'category' : article.category.alias,
                            'id' : article.id
                        }) }}">
                            <img src="{{ asset ( 'images/' ~ article.image ) }}" width="200em" class="img-responsive"
                                 alt="{{ article.title }}">
                        </a>
                        <div class="mid-1">
                            <div class="women">
                                <h6><a href="{{ path('default_article', {
                                        'alias' : article.alias,
                                        'category' : article.category.alias,
                                        'id' : article.id
                                    }) }}">{{ article.content|striptags }}</a></h6>
                            </div>
                            <div class="mid-2">
                                <div class="pr-single">

                                    <p>
                                        <mark><strong>{{ article.price }} â‚¬</strong></mark>
                                    </p>
                                </div>
                                <div class="block">
                                    <div class="starbox small ghosting"></div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="add">
                                <button class="btn btn-info my-cart-btn my-cart-b" data-id="36" data-name="Baby Oil"
                                        data-summary="summary 36" data-price="6.00" data-quantity="1"
                                        data-image="images/of36.png">
                                    <a href="{{ path('panier_add', {'id':article.id}) }}">Ajouter au panier</a></button>
                            </div>

                        </div>
                        </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col alert alert-warning text-center">
                        Aucune publication pour le moment
                    </div>
                {% endif %}
</div>
</div>
</div>
{% endblock %}



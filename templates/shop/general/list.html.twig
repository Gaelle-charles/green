    {% block content %}
        <div class="py-5 bg-light">
            <div class="container ">
                <div class="row">

                    {% for article in articles %}
                        <div class="col-md-4 mt-4">
                            <div class="card shadow-sm">
                                <h5 class="card-title">{{article.title}}</h5>
                                <img class="card-img-top" height="250" width="250" src="{{ asset ( 'images/' ~ article.image )}}" alt="{{article.title}}">
                                <div class="card-body">
                                    <div class="card-text">
                                        <p>{{article.content |striptags }}</p>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
{#                                        <a href="{{ path('default_article', }  #}
{#                                            'categorie' : article.category.alias, 'alias': article.alias, 'id' : article.id#}
{#                                        })}}"#}
{#                                           class="btn btn-primary">Lire la suite</a>#}
{#                                        <small class="text-muted">#}
{#                                            {{ article.user.firstname }} {{ article.user.lastname }}#}
{#                                        </small>#}
                                    </div>
                                    <a href="{{ path('panier_add', {'id':article.id}) }}" class="btn btn-success float-right">
                                        <i class="fas fa-shopping-cart mr-1"></i>
                                        Ajouter
                                    </a>
                                    <aside>
                                        {{article.price}}
                                    </aside>
                                </div>
                            </div> <!-- Fin card -->
                        </div>
                    {% endfor %}

                </div> <!-- Fin row -->
            </div> <!-- Fin container -->
        </div>
    {% endblock  %}





<html class="no-js" lang="fr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>{% block title %}{% block page_title '' %} | {% block app_title 'Green Kilty' %}{% endblock %}</title>
    <meta name="description"
          content="{% block meta_description %}Description du site, unique sur chaque page.{% endblock %}"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/home/bootstrap.css') }}" rel="stylesheet"/>
        <link href="{{ asset('css/home/font-awesome.min.css') }}" rel="stylesheet"/><!-- Font awesome css file -->
        <link href="{{ asset('css/font-awesome.css') }}" rel="stylesheet" />
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css"/>
        <link href="{{ asset('css/jstarbox.css') }}" rel="stylesheet" type="text/css" media="screen"/>
        <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,700" rel="stylesheet" type="text/css"/>
        <link href="//fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css"/>
    {% endblock %}
    {% block final_stylesheets '' %}
    {% block head_javascripts '' %}
</head>

<body class="skin-default fixed-layout">
    {% block body %}
        <main class="container">
            <div class="row">
                <div class="col">
                    {{ render(controller('App\\Controller\\DefaultController::menu')) }}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div class="container my-4">
                            <div class="row">
                                <div class="col">
                                    <div class="alert alert-info text-center">
                                        Bonjour {{ app.user.firstname }} -
                                        {% if is_granted('ROLE_ADMIN') %}
                                            <em>Administrateur</em>
                                        {% elseif is_granted('ROLE_USER') %}
                                            <em>Utilisateur</em>
                                        {% else %}
                                            <em>Abonné(e)</em>
                                        {% endif %}

                                        {% if is_granted('ROLE_ADMIN') %}
                                            | <a href="{{ path('article_add') }}">Rédiger un Article</a>
                                        {% endif %}

                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}


                    {% block content %}{% endblock %}
                    {% include 'components/_footer.html.twig' %}

                </div>
            </div>
        </main>

    {% endblock %}
    {% block javascripts '' %}
    {% block final_javascripts '' %}
</body>
</html>